<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <template id="inherit_report_invoice_document_soluciones">
      <t t-call="web_template_report.inherit_internal_layout">
        <t t-set="o" t-value="o.with_context(lang=lang)" />
        <br/>
        <div class="container" style="font-family: Arial,sans-serif,Helvetica,Monaco,Georgia,Futura,Verdana; font-size: 80%;">
          <div class="row">
            <div class="col-7">
              <table>
                <tr>
                  <th class="text-left" style="padding-right: 50px; padding-top: 10;">Cliente</th>
                  <td class="text-left">
                    <span t-field="o.partner_id.name"/>
                  </td>
                </tr>
                <tr>
                  <th class="text-left" style="padding-right: 50px; padding-top: 10;">R.I.F</th>
                  <td class="text-left">
                    <span t-field="o.partner_id.l10n_latam_identification_type_id"/>
                    <span t-field="o.partner_id.vat"/>
                  </td>
                </tr>
                <tr>
                  <th class="text-left" style="padding-right: 50px; padding-top: 10;">Dirección</th>
                  <td class="text-left">
                    <span t-field="o.partner_id.street"/>
                    <span t-field="o.partner_id.street2"/>
                  </td>
                </tr>
                <tr>
                  <th class="text-right" style="padding-right: 50px; padding-top: 10;">Teléfonos</th>
                  <td class="text-left">
                    <span t-field="o.partner_id.phone"/>
                  </td>
                </tr>
              </table>
            </div>
            <div class="col-5">
              <table>
                <tr>
                  <th class="text-right" style="padding-right: 25px; padding-top: 10;">
                    <h5>Factura Nº</h5>
                  </th>
                  <td class="text-left">
                    <h5 t-field="o.name"/>
                  </td>
                </tr>
                <tr>
                  <th class="text-right" style="padding-right: 25px; padding-top: 10;">Fecha</th>
                  <td class="text-left">
                    <span t-field="o.invoice_date"/>
                  </td>
                </tr>
                <tr>
                  <th class="text-right" style="padding-right: 25px; padding-top: 10;">Termino de Pago:</th>
                  <td class="text-left">
                    <span t-field="o.payment_type2"/>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        </div>
        <div class="page" style="font-family: Arial,sans-serif,Helvetica,Monaco,Georgia,Futura,Verdana; font-size: 80%;">
          <div id="informations" class="row mt32 mb32">
            <table class="table table-sm o_main_table" name="invoice_line_table">
              <thead>
                <tr>
                  <th name="th_code" class="text-left"><span>Código</span></th>
                  <th name="th_description" class="text-left"><span>Descripción</span></th>
                  <th name="th_quantity" class="text-right"><span>Cantidad</span></th>
                  <th name="th_priceunit" class="text-right"><span>Precio</span></th>
                  <th name="th_total" class="text-right"><span>Total</span></th>
                </tr>
              </thead>
              <tbody class="invoice_tbody">
                <t t-set="current_subtotal" t-value="0"/>
                <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                <t t-foreach="lines" t-as="line">
                  <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                  <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                  <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                    <t t-if="not line.display_type" name="account_invoice_line_accountable">
                      <td class="text-left">
                        <span t-field="line.product_id.default_code"/>
                      </td>
                      <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                      <td class="text-right">
                        <span t-field="line.quantity" t-options="{'widget': 'float', 'precision': 0 }"/>
                        <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                      </td>
                      <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                        <span class="text-nowrap" t-field="line.price_unit" t-options="format_amount(amount, currency)"/>
                      </td>
                      <td class="text-right o_price_total">
                        <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                      </td>
                    </t>
                  </tr>
                </t>
              </tbody>
            </table>
          </div>
          <br/><br/><br/><br/>
          <div class="container" style="font-family: Arial,sans-serif,Helvetica,Monaco,Georgia,Futura,Verdana;">
              <t t-set="taxes" t-value="o.amount_by_group[0][1]"/>
              <t t-set="currency" t-value="1 / o.currency_id.rate" />
              <t t-set="subtotal" t-value="o.amount_untaxed * currency"/>
              <t t-set="iva" t-value="taxes * currency"/>
              <t t-set="total" t-value="o.amount_total * currency"/>
            <div class="row">
              <t t-set="iva" t-value="o.amount_by_group[0][1]"/>
              <div class="col-8" style="border-color: black; border-width: 2px; border-style: solid;">
                <p>
                  Conversión a la tasa BCV Bs <span t-esc="currency" t-options="{'widget': 'float', 'precision': 2}" /> por US$, según fecha de emisión del documento, con lo establacido en el ART.116 del banco de BCV y el ART.25 de la lay IVA
                </p>
                <center>
                  <table>
                    <tr>
                      <th class="text-right" style="padding-right: 50px; padding-top: 10;">
                        Base $
                      </th>
                      <td class="text-left">
                        <span t-field="o.amount_untaxed"/>
                      </td>
                    </tr>
                    <tr>
                      <th class="text-right" style="padding-right: 50px; padding-top: 10;">IVA $ 16%</th>
                      <td class="text-left">
                        <span>$</span>
                      <span t-esc="taxes" t-options="{'widget': 'float', 'precision': 2}"/>
                      </td>
                    </tr>
                    <tr>
                      <th class="text-right" style="padding-right: 50px; padding-top: 10;">Total $</th>
                      <td class="text-left">
                        <span t-field="o.amount_total"/>
                      </td>
                    </tr>
                  </table>
                  <br/>
                </center>
              </div>
              <div class="col-4" style="border-color: black; border-width: 2px; border-style: solid;">
                <br/>
                <table>
                  <tr>
                    <th class="text-right" style="padding-right: 50px; padding-top: 10;">
                      Sub-Total
                    </th>
                    <td class="text-left">
                      <span t-esc="subtotal" t-options="{'widget': 'float', 'precision': 2}"/>
                    </td>
                  </tr>
                  <tr>
                    <th class="text-right" style="padding-right: 50px; padding-top: 10;">IVA</th>
                    <td class="text-left">
                      <span t-esc="iva" t-options="{'widget': 'float', 'precision': 2}"/>
                    </td>
                  </tr>
                  <tr>
                    <th class="text-right" style="padding-right: 50px; padding-top: 10;">Total Factura</th>
                    <td class="text-left">
                      <span t-esc="total" t-options="{'widget': 'float', 'precision': 2}"/>
                    </td>
                  </tr>
                </table>
                <br/>
                <br/>
              </div>
            </div>
            <!--<div class="row">-->
              <!--<div class="col-12 text-center">-->
                <!--<p style="font-size: 90%;">-->
                  <!--<strong>GRAFICAS NERIO TIP, C.A.</strong> RIF.: J-07032562-3 - TELF.:. (0261) 7516963 - 7529054. AV. 28 LA LIMPIA URB. SUCRE Nº 61-111. -->
                  <!--(No PROVIDENCIA SENIAT/04/00171 DE FECHA: 08/02/2008) REGIÓN ZULIANA. No DE CONTROL DESDE 00-000501 HASTA EL No. 00-000750 -->
                  <!--(5/50/03) (FECHA LIBRE) FECHA DE ELEBORACIÓN 26/06/2019-->
                <!--</p>-->
                <!--<div class="text-right">-->
                  <!--<strong>ORIGINAL - CLIENTE</strong>-->
                <!--</div>-->
              <!--</div>-->
            <!--</div>-->
          </div>
        </div>
      </t>
    </template>
 
    <template id="template_invoice_document_soluciones">
      <t t-call="web.html_container">
        <t t-foreach="docs" t-as="o">
          <t t-set="lang" t-value="o.partner_id.lang"/>
          <t t-call="invoice_report_soluciones.inherit_report_invoice_document_soluciones" t-lang="lang"/>
        </t>
      </t>
    </template>

    <report 
      id="action_report_invoice_document_soluciones"
      model="account.move"
      string="Factura Soluciones"
      name="invoice_report_soluciones.template_invoice_document_soluciones"
      file="invoice_report_soluciones.template_invoice_document_soluciones"
      report_type="qweb-pdf"
      print_report_name="'Factura - %s' % (object.name).replace('/','-')"
    />
  </data>
</odoo>
